# Production Environment
NODE_ENV=production
PORT=7777
MONGODB_URI=mongodb://production-mongodb-host:27017/organizer-production

# Server Configuration
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=your-production-session-secret-key-change-this-immediately

# Logging
LOG_LEVEL=warn
ENABLE_LOGGING=true

# Security
JWT_SECRET=your-production-jwt-secret-key-change-this-immediately
BCRYPT_ROUNDS=14

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Database Configuration
DB_NAME=organizer-production
DB_HOST=production-mongodb-host
DB_PORT=27017

# External Services
# REDIS_URL=redis://production-redis-host:6379
# SMTP_HOST=smtp.production.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600

# SSL/TLS
SSL_ENABLED=true
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem
