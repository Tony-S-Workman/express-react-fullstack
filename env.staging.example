# Staging Environment
NODE_ENV=staging
PORT=7777
MONGODB_URI=mongodb://staging-mongodb-host:27017/organizer-staging

# Server Configuration
CORS_ORIGIN=https://staging.yourdomain.com
SESSION_SECRET=your-staging-session-secret-key-change-this

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Security
JWT_SECRET=your-staging-jwt-secret-key-change-this
BCRYPT_ROUNDS=12

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Database Configuration
DB_NAME=organizer-staging
DB_HOST=staging-mongodb-host
DB_PORT=27017

# External Services
# REDIS_URL=redis://staging-redis-host:6379
# SMTP_HOST=smtp.staging.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
